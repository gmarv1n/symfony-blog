
{% block body %}
    <h1>User index</h1>

    <table class="table admin-posts">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>UserNickName</th>
                <th>Roles</th>
                <th style="display: none;">Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.userNickName }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td style="display: none;">{{ user.password }}</td>
                <td>
                    <a href="{{ path('user_admin_show', {'userNickName': user.userNickName}) }}">show</a>
                    <a href="{{ path('user_admin_edit', {'userNickName': user.userNickName}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
