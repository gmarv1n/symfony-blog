{% extends 'admin/index.html.twig' %}

{% block title %}User {{ user.userNickName }}{% endblock %}

{% block body %}
<div class="admin-content-block">
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>UserNickName</th>
                <td>{{ user.userNickName }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_users') }}">back to list</a>

    <a href="{{ path('user_edit', {'userNickName': user.userNickName}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
