{% extends 'base.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block body %}
    <h1>BlogPost index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Image_name</th>
                <th>Short_content</th>
                <th>Content</th>
                <th>Category</th>
                <th>Tags</th>
                <th>Date</th>
                <th>Author_nick</th>
                <th>Author_id</th>
                <th>Likes_count</th>
                <th>Comments_count</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_post in blog_posts %}
            <tr>
                <td>{{ blog_post.id }}</td>
                <td>{{ blog_post.title }}</td>
                <td>{{ blog_post.slug }}</td>
                <td>{{ blog_post.imageName }}</td>
                <td>{{ blog_post.shortContent }}</td>
                <td>{{ blog_post.content }}</td>
                <td>{{ blog_post.category }}</td>
                <td>{{ blog_post.tags }}</td>
                <td>{{ blog_post.date ? blog_post.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ blog_post.authorNick }}</td>
                <td>{{ blog_post.authorId }}</td>
                <td>{{ blog_post.likesCount }}</td>
                <td>{{ blog_post.commentsCount }}</td>
                <td>
                    <a href="{{ path('blog_post_show', {'slug': blog_post.slug}) }}">show</a>
                    <a href="{{ path('blog_post_edit', {'slug': blog_post.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_post_new') }}">Create new</a>
{% endblock %}
