{% extends 'base.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
    <h1>BlogPost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog_post.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blog_post.slug }}</td>
            </tr>
            <tr>
                <th>Image_name</th>
                <td>{{ blog_post.imageName }}</td>
            </tr>
            <tr>
                <th>Short_content</th>
                <td>{{ blog_post.shortContent }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog_post.content }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ blog_post.category }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ blog_post.tags }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blog_post.date ? blog_post.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author_name</th>
                <td>{{ blog_post.authorName }}</td>
            </tr>
            <tr>
                <th>Likes_counter</th>
                <td>{{ blog_post.likesCounter }}</td>
            </tr>
            <tr>
                <th>Comments_count</th>
                <td>{{ blog_post.commentsCount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_post_index') }}">back to list</a>

    <a href="{{ path('blog_post_edit', {'id': blog_post.id}) }}">edit</a>

    {{ include('blog_post/_delete_form.html.twig') }}
{% endblock %}
