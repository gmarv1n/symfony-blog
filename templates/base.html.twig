        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block header %}{{ render(controller(
            'App\\Controller\\HeaderController::renderHeader'
