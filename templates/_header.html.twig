<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>This is {{ controller_header }}! âœ…</h1>

    <ul>
    {% for menuItem, menuLink in mainMenu %}
        <li><a href="{{ menuLink }}">{{ menuItem }}</a></li>
    {% endfor %}
    </ul>
    {% if app.user %}
    <h4>You are logged in! Hello, {{ app.user.usernickname }}! You can <a href="{{ logout_link }}">Logout!</a></h4>
    {% else %}
    <h4>You are NOT logged in! You can <a href="{{ login_link }}">Log in!</a> or <a href="{{ register_link }}">Register</a></h4>
    {% endif %}
</div>
