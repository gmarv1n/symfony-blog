<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 14px sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .menu-item { font-size: 15px; display: inline-block; margin-right: 16px; }
    .right-align { text-align: right;}
</style>

<div class="example-wrapper">
    <h3>This is {{ controller_header }}! âœ…</h3>

    <ul>
    {% for menuItem, menuLink in mainMenu %}
        <li class="menu-item"><a href="{{ menuLink }}">{{ menuItem }}</a></li>
    {% endfor %}
    </ul>
    <div class="right-align">
        {% if app.user %}
        <h6>You are logged in! Hello, {{ app.user.usernickname }}! You can <a href="{{ logout_link }}">Logout!</a></h6>
        {% else %}
        <h6>You are NOT logged in! You can <a href="{{ login_link }}">Log in!</a> or <a href="{{ register_link }}">Register</a></h6>
        {% endif %}
    </div>
    <hr>
    <hr>
</div>
